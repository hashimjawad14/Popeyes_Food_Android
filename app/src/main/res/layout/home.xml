<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="top"
    android:weightSum="5">


        <View
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/purple_round"
            android:id="@+id/gradient_top">
        </View>


    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/round_corners"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:src="@drawable/user_avatar"
        android:id="@+id/user_avatar"
        android:contentDescription="user_img" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:text="Popeye's"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"

        />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/round_corners"
        android:layout_marginTop="12dp"
        android:layout_marginRight="18dp"
        android:padding="8dp"
        android:src="@drawable/chat_bubble"
        android:id="@+id/chat_bubble"
        android:contentDescription="chat_img"
        android:layout_alignEnd="@+id/gradient_top"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="358dp"
            android:layout_height="210dp"
            android:background="@drawable/round_corners"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            tools:ignore="MissingClass,MissingConstraints"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="83dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingTop="20dp"
                        android:text="Items Price"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="3"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        tools:ignore="NestedWeights">


                        <ImageView
                            android:id="@+id/burger_icon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/icon_background"
                            android:padding="4dp"
                            android:src="@drawable/burger" />


                        <ImageView
                            android:id="@+id/pizza_icon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/icon_background"
                            android:padding="4dp"
                            android:src="@drawable/pizza" />

                        <ImageView
                            android:id="@+id/fries_icon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/icon_background"
                            android:padding="4dp"
                            android:src="@drawable/fries" />

                        <ImageView
                            android:id="@+id/cupcake_icon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/icon_background"
                            android:padding="4dp"
                            android:src="@drawable/cupcake" />

                        <ImageView
                            android:id="@+id/softdrink_icon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/icon_background"
                            android:padding="4dp"
                            android:src="@drawable/softdrink" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:gravity="top|center"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1200"
                            android:textAlignment="center"
                            android:textColor="@color/price_text"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="3000"
                            android:textAlignment="center"
                            android:textColor="@color/price_text"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="300"
                            android:textAlignment="center"
                            android:textColor="@color/price_text"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="200"
                            android:textAlignment="center"
                            android:textColor="@color/price_text"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="200"
                            android:textAlignment="center"
                            android:textColor="@color/price_text"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="Suspicious0dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/like_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:text="Like" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="Suspicious0dp">

                        <ImageView
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:src="@drawable/comment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:text="Comment" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="Suspicious0dp">

                        <ImageView
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:src="@drawable/share_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:text="Share" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:orientation="vertical"
            android:weightSum="7"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="3"
                android:orientation="vertical"
                android:weightSum="7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:text="Latest Product"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="45dp"
                        android:text="View All"
                        android:textAlignment="textEnd"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="4"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/pizza_pic" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/burger_pic" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/cupcake_pic" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/fries_pic" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Pizza"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Burger"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Cupcake"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Fries"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="3000"
                        android:textColor="@color/latest_price_text"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1200"
                        android:textColor="@color/latest_price_text"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="400"
                        android:textColor="@color/latest_price_text"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/latest_price_text"
                        android:text="300"

                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="20dp"
                        android:src="@drawable/user_avatar"
                        app:civ_border_color="@color/theme1"
                        app:civ_border_width="3dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:id="@+id/linearLayout2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Martin Poimer"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:id="@+id/name"
                        android:layout_marginTop="50dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Just Now"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_below="@+id/name"
                        android:alpha="0.7"
                        android:id="@+id/time"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignEnd="@+id/time"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/three_dot" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New Post Added Lorem Ipsum is a Dummy Text"
                        android:textSize="18sp"
                        android:paddingLeft="6dp"
                        android:paddingTop="2dp"
                        android:alpha="0.9"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/deal2"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:padding="4dp"
                        />



                </LinearLayout>

            </LinearLayout>





        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>










</RelativeLayout>